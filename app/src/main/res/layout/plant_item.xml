<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/dark_red"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:layout_height="55dp"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/dark_red">

                <ImageView
                    android:id="@+id/plantItemImage"
                    tools:srcCompat="@drawable/plant_image"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    app:layout_constraintDimensionRatio="H,16:9"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgIsNotWatered"
                    tools:srcCompat="@drawable/img_is_not_watered"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imgInsectsAttacked"
                    tools:srcCompat="@drawable/img_insects_attacked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"/>

                <ImageView
                    android:id="@+id/imgLeavesFallen"
                    tools:srcCompat="@drawable/img_leaves_fallen"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/plantItemTitle"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:gravity="center"
                android:text="@string/plant"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>